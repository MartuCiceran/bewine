            </div> --}}
            
            <!-- Otros productos... -->
        </section>

        <aside id="cart">
            <h2 style="color: #891616; text-align: center;">Carrito de Compras</h2>
            <ul id="cart-items"></ul>
            <p>Total: $<span id="cart-total">0.00</span></p>
            
            <button type="button" onclick="realizarPedido(); clearCart();"><strong>Enviar Pedido</strong></button>
            
        </aside>
    </div>
    <div id="mailEnviado">
        <div style="text-align: center;">
            <h1>¡EXCELENTE!</h1>
            <h4>Su pedido ha sido enviado con éxito</h4>
            <button onclick="changeScreen()">Volver</button>
        </div>
        
    </div>
</body>
