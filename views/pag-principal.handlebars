<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio</title>
</head>
<body>
    <header>
        <h1>BEWINE</h1>
        <div id="cart-icon" onclick="showCart()">
            <a href="#cart"><img src="/img/carrito-de-compras.png" alt="Icono de Carrito">
            <span id="cart-counter">0</span></a>
        </div>
    </header>
    <div id="pag-principal">
        <div class="search-container">
            <input type="text" class="search-input" id="search-input" placeholder="Buscar..." onkeyup="buscarPorContenido()">
        </div>
        <section id="products">
            <!-- Aquí irían tus productos -->
            <div id="no-results" style="display: none; text-align: center;">
                <p>No se encontraron resultados</p>
            </div>

            {{#each productos}}
                <div class="product">
                    <h1 class="nombreProducto">{{this.nombreProducto}}</h1>
                    <p class="nombreBodega"><strong>{{this.bodega}}</strong></p>
                    <p>Caja x6 unidades</p>
                    <p>750ml</p>
                    <p style="font-weight: 900; font-size:30px">${{this.precio}}</p>
                    <button onclick="addToCart('{{this.nombreProducto}}', '{{this.bodega}}', {{this.precio}})"><strong>Agregar al Carrito</strong></button>
                </div>
            {{/each}}
